{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/@typescript-eslint",
    "eslint-config-prettier"
  ],
  "rules": {
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-cond-assign": 1,
    "sort-keys": 1,

    "indent": "off",
    "@typescript-eslint/indent": ["error", 2]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
